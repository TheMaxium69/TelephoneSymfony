{% extends 'base.html.twig' %}

{% block title %}Affichage de tout les telephone!{% endblock %}

{% block body %}

<div class="row">
    {% for telephone in telephones %}
        <div class="card" style="width: 18rem;">
            <img src="{{ telephone.img }}" class="card-img-top" alt="{{ telephone.modelName }}">
            <div class="card-body">
                <h5 class="card-title">{{ telephone.modelName | capitalize }}</h5>
                <p class="card-text">{{ telephone.description | capitalize }}</p>
                <p class="card-text">Stockage : {{ telephone.stockage }} go</p>
                <p class="card-text">Prix : {{ telephone.price }} â‚¬</p>
                <p class="card-text">date de sorti : {{ telephone.createdDate | date('d M Y') }} </p>

                <a href="{{ path('telephoneDel', {id : telephone.id}) }}" class="btn btn-danger">Supprimer</a>
                <a href="{{ path('telephoneShow', {id : telephone.id }) }}" class="btn btn-primary">Voir plus</a>
            </div>
        </div>
    {% endfor %}
</div>



{% endblock %}
